<center><h1>Todos os Arquivos</h1><center>
<table class="table">
  <thead>
    <tr>
    <th scope="col">ID</th>
    <th scope="col">Nome</th>
    <th scope="col">Titulo</th>
    <th scope="col">Autor</th>
    <th scope="col">Ano</th>
    <th scope="col">Licensa</th>
  </tr>

  <div class="active-cyan-3 active-cyan-4 mb-4">
    <input class="form-control" type="text" placeholder="Search" aria-label="Search">
  </div>

  <% @arquivos.each do |arquivo| -%>

  </thead>
  <tbody>
    <tr>
      <th scope="row"><%=arquivo.id%></th>
      <th scope="row"><%=arquivo.nome%></th>
      <td><%= arquivo.titulo %></td>
      <td><%= arquivo.autor %></td>
      <td><%= arquivo.ano %></td>
      <td><%= arquivo.licensas.last.nome if arquivo.licensas.present? %></td>
      <td><%= link_to 'Vizualizar', edit_arquivo_path(arquivo) %></td>
    </tr>
    
  </tbody>
  <% end -%>
</table>
